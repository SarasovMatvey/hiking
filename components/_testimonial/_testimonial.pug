mixin testimonial(data)
    //- svg clip mask for avatar image
    svg(width="100%", height="100%", viewBox="0 0 100 100")
        defs
            clipPath#testimonial__clip-mask
                polygon(points="50 0, 100 25.3, 100 74.7, 50 100, 0 74.7, 0 25.3")
    section.testimonial#testimonial
        .container.testimonial__container
            .testimonial__title-wrap.wow.fadeInLeft(data-wow-offset="300")
                +title("testimonial", "testimonial__title")
            ul.testimonial__slider.owl-carousel#slider.wow.fadeInLeft(data-wow-offset="300")
